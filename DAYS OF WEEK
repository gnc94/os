#include <iostream>
using namespace std;

int main() {
    int day;

    cout << "What day is today?" << endl;
    cout << "Enter your choice according to the menu:\n"
         << "1. Sunday\n"
         << "2. Monday\n"
         << "3. Tuesday\n"
         << "4. Wednesday\n"
         << "5. Thursday\n"
         << "6. Friday\n"
         << "7. Saturday\n"
         << "Your choice: ";

    cin >> day;

    switch (day) {
        case 1:
            cout << "It's Sunday!" << endl;
            break;
        case 2:
            cout << "It's Monday!" << endl;
            break;
        case 3:
            cout << "It's Tuesday!" << endl;
            break;
        case 4:
            cout << "It's Wednesday!" << endl;
            break;
        case 5:
            cout << "It's Thursday!" << endl;
            break;
        case 6:
            cout << "It's Friday!" << endl;
            break;
        case 7:
            cout << "It's Saturday!" << endl;
            break;
        default:
            cout << "Invalid Choice!" << endl;
            break;
    }

    cout << "Have a great day\nBye..." << endl;

    return 0;
}
