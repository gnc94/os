#include <iostream>
using namespace std;

int main() {
    int num, count = 0;

    cout << "Enter a number: ";
    cin >> num;

    for (int i = 2; i <= num; i++) {
        if (num % i == 0) {
            count++;
        }
    }

    if (count == 1) {
        cout << "The entered number is a prime number." << endl;
    } else {
        cout << "The entered number is not a prime number." << endl;
    }

    return 0;
}
